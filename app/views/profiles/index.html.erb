<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Facebook</th>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>Full name</th>
    <th>Birthday</th>
    <th>Location</th>
    <th>Hometown</th>
    <th>Relationship status</th>
    <th>Votes</th>
    <th>Votes in network</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.facebook_id %></td>
    <td><%= profile.first_name %></td>
    <td><%= profile.middle_name %></td>
    <td><%= profile.last_name %></td>
    <td><%= profile.full_name %></td>
    <td><%= profile.birthday %></td>
    <td><%= profile.location %></td>
    <td><%= profile.hometown %></td>
    <td><%= profile.relationship_status %></td>
    <td><%= profile.votes %></td>
    <td><%= profile.votes_network %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

